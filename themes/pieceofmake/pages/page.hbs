{{!< default}}
{{! The above will include this template into the body of the default template }}

{{> page-header}}
{{! This includes the page-header.hbs partial }}

<main id="main" class="container">
	<div id="wrapper" class="clearfix">

		<div id="content">
			{{#post}}
			<article class="post">
				<div class="row">
					<div class="col-md-12">
						<h1 class="page-title">{{title}}</h1>
					</div>
				</div>

				{{#if image}}
				<div class="row">
					<div class="post-image col-md-12"><img src="{{image}}" alt="{{title}}"></div>
				</div>
				<!-- / post image -->
				{{/if}}

				<div class="row">
					<div class="col-md-12">
						<div class="post-content">
							{{content}}
						</div>
					</div>
				</div>
			</article>
			{{/post}}
			<!-- / post -->
		</div>
		<!-- / content -->

		{{> page-sidebar}}
		{{! This includes the page-sidebar.hbs partial }}
	</div>
	<!-- / wrapper -->
</main>
<!-- / main -->

{{> page-footer}}
{{! This includes the page-footer.hbs partial }}