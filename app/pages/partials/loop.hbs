<section id="news" class="board row">

  <div class="col-single">
    <h2>Actualité</h2>
    <p class="focus">Nous proposons des services dans toutes les étapes clés pour réaliser des applications web et mobiles.</p>
    {{! Previous/next page links - displayed on every page }}
    {{pagination}}
  </div>

  {{! This is the post loop - each post will be output using this markup }}
  {{#foreach posts}}
  <div class="col-single">
      <article class="{{post_class}}">
          <header>
              {{#if image}}<img class="post-img" src={{image}} />{{/if}}
          </header>
          <section class="post-excerpt">
              <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD/MM/YYYY"}}</time>
              <h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>
              <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
          </section>
          <footer class="post-meta">
  {{!--             {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
              {{author}} --}}
              <i class="icon icon-tags"></i> {{tags}}
          </footer>

      </article>
  </div>
  {{/foreach}}
</section>


