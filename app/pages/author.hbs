{{!< default}}
{{! The above will include this template into the body of the default template }}

{{> page-header}}
{{! This includes the page-header.hbs partial }}

<main id="main" class="container">
	<div id="wrapper" class="clearfix">

		<div id="content" class="content-3-col">
			<div class="author-info">
				{{#author}}
				<div class="row">
					<div class="col-sm-12 col-md-4 hidden-xs">{{#if image}}<img src="{{image}}" alt="{{name}}" class="author-image">{{/if}}</div>
					<div class="col-sm-12 col-md-8">
						<h3 class="author-name">{{name}}</h3>
						{{#if location}}
							<p class="author-meta">{{location}}, 
							{{#if website}}
							<a href="{{website}}" title="{{name}}' website">{{website}}</a>
							{{/if}}
						{{else}}
							{{#if website}}
							<p class="author-meta"><a href="{{website}}" title="{{name}}' website">{{website}}</a>
							{{/if}}
							</p>
						{{/if}}
						{{#if bio}}<p class="author-bio">{{bio}}</p>{{/if}}
					</div>
				</div>
				{{/author}}
			</div>
			<div class="row">
				{{> loops/loop-3-col}}
				{{! This includes the loops/loop-3-col.hbs partial }}
			</div>
			
			{{pagination}}
		</div>
		<!-- / content -->

		{{> page-sidebar}}
		{{! This includes the page-sidebar.hbs partial }}
	</div>
	<!-- / wrapper -->
</main>
<!-- / main -->

{{> page-footer}}
{{! This includes the page-footer.hbs partial }}